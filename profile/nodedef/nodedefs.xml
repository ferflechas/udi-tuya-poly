<nodeDefs>
    <!-- TUYA Control -->
    <nodeDef id="controller" nls="ctl">
        <editors />
        <sts>
            <st id="ST" editor="bool" />
            <st id="GV0" editor="tuyaclr" />
        </sts>
        <cmds>
            <sends />
            <accepts>
                <cmd id="DISCOVER" />
            </accepts>
        </cmds>
    </nodeDef>
    <!-- NODE DEF from 5.0 document http://wiki.universal-devices.com/index.php?title=V50_MAIN -->
    <!-- TUYA Light -->
    <nodeDef id="tuyalight" nls="tuyac">
        <editors />
        <sts>
            <st id="ST" editor="tuyast" />
        </sts>
        <cmds>
            <sends>
                <cmd id="DON" />
                <cmd id="DOF" />
                <cmd id="DFON" />
                <cmd id="DFOF" />
            </sends>
            <accepts>
                <cmd id="DON" />
                <cmd id="DOF" />
                <cmd id="DFON" />
                <cmd id="DFOF" />
                <cmd id="QUERY" />
            </accepts>
        </cmds>
    </nodeDef>
</nodeDefs>
